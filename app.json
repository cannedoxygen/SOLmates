{
  "expo": {
    "name": "Solmates",
    "slug": "solmates",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/app_icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0E27"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.solmates.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take profile photos.",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to select profile photos.",
        "NSFaceIDUsageDescription": "This app uses Face ID for secure authentication.",
        "LSApplicationQueriesSchemes": [
          "solana",
          "phantom",
          "solflare",
          "backpack"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive_icon.png",
        "backgroundColor": "#0A0E27"
      },
      "package": "com.solmates",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK"
      ],
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "@xml/network_security_config",
      "intentFilters": [
        {
          "action": "VIEW",
          "category": [
            "DEFAULT",
            "BROWSABLE"
          ],
          "data": {
            "scheme": "https",
            "host": "auth.privy.io",
            "path": "/android/com.solmates"
          }
        },
        {
          "action": "VIEW",
          "category": [
            "DEFAULT",
            "BROWSABLE"
          ],
          "data": {
            "scheme": "https",
            "host": "solmates.app"
          }
        },
        {
          "action": "VIEW",
          "category": [
            "DEFAULT",
            "BROWSABLE"
          ],
          "data": {
            "scheme": "solmates"
          }
        },
        {
          "action": "VIEW",
          "category": [
            "DEFAULT",
            "BROWSABLE"
          ],
          "data": {
            "scheme": "solmates",
            "path": "/oauth/callback"
          }
        },
        {
          "action": "VIEW",
          "category": [
            "DEFAULT",
            "BROWSABLE"
          ],
          "data": {
            "scheme": "https",
            "host": "solana.com"
          }
        },
        {
          "action": "VIEW",
          "category": [
            "DEFAULT",
            "BROWSABLE"
          ],
          "data": {
            "scheme": "solana-wallet"
          }
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-dev-client",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#9945FF",
          "sounds": [
            "./assets/notification.wav"
          ]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your matches."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Solmates to use Face ID for secure authentication."
        }
      ],
      "expo-secure-store"
    ],
    "scheme": "solmates",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "4bc182aa-ae40-4315-9ea1-e85e9737a573"
      },
      "projectWallet": "BgYCyVYgymjGwki2Ao3ZWb7Qrbv2QXiXco8VzY4UwCyt"
    }
  }
}
